<div class='nested-fields'>
  <div class="field">
    <%= f.label :image %>
    <br>
    <% if f.object.image && f.object.image.url %>
    <img src="<%= f.object.image.url %>" alt="", style="height:50px">
    <% end %>
    <%= f.file_field :image %>
  </div>
  <%= link_to_remove_association "remove attachment", f %>
</div>
